{
    "tools": [
        {
            "id": "1",
            "name": "nmap",
            "description": "Network exploration tool and security/port scanner.",
            "version": "7.92",
            "author": "Fyodor",
            "test-commands": ["nmap -V"],
            "packages-managers": ["apt", "yum", "pacman", "snap"],
            "actions": {
                "apt": {
                    "install": "apt-get install nmap",
                    "remove": "apt-get remove nmap",
                    "update": "apt-get update nmap"
                },
                "yum": {
                    "install": "yum install nmap",
                    "remove": "yum remove nmap",
                    "update": "yum update nmap"
                },
                "pacman": {
                    "install": "pacman -S nmap",
                    "remove": "pacman -R nmap",
                    "update": "pacman -Syu nmap"
                },
                "snap": {
                    "install": "snap install nmap",
                    "remove": "snap remove nmap",
                    "update": "snap refresh nmap"
                }
            },
            "categories": ["Network Scanning", "Reconnaissance"],
            "tags": ["network", "scanner", "security"],
            "metadata": {
                "license": "GPL",
                "source": "https://nmap.org/",
                "logo-url": "https://www.kali.org/tools/nmap/images/nmap-logo.svg"
            }
        },
